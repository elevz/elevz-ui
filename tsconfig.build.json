{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@lib/*": [
        "lib/*"
      ]
    },
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "rootDir": "lib",
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "src"
  ]
}